{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="css/contact.css">
{% endblock %}


{% block body %}
      {% if app.user %}
        {% include 'composants/navBarUser.html.twig' %}
      {% else %}
        {% include 'composants/navbarAccueil.html.twig' %}
      {% endif %}

<div class="container pt-2 pb-2 text-dark nousContacter">
    Nous contacter
</div>

<div class="container d-flex align-items-center justify-content-center bg-light mb-5 bg-shadow" style="height: 70vh;">

  <div class="bg-form">{{ form_start(form) }}

          <div>{{ form_row(form.name, {"attr": {"class": "text-dark customRowInput"}, "label": "Nom"}) }}</div>
          <div>{{ form_row(form.mail, {"attr": {"class": "text-dark customRowInput"}, "label": "Email"}) }}</div>
          <div>{{ form_row(form.message, {"attr": {"class": "text-dark customRowInput"}, "label": "Message"}) }}</div>
          <div>{{ form_row(form.envoyer, {"attr": {"class": "bg-success text-white btn btn-block"}}) }}</div>
            
  {{ form_end(form) }}</div>

</div>
{% include 'composants/footer.html.twig' %}
{% endblock %}
