{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
      {% if app.user %}
        {% include 'composants/navBarUser.html.twig' %}
      {% else %}
        {% include 'composants/navbarAccueil.html.twig' %}
      {% endif %}

<div class="container d-flex align-items-center justify-content-center" style="height: 70vh;">
    


{{ form_start(form) }}

        <div>{{ form_row(form.name, {"attr": {"class": "text-dark"}, "label": "Nom"}) }}</div>
        <div>{{ form_row(form.mail, {"attr": {"class": "text-dark"}, "label": "Email"}) }}</div>
        <div>{{ form_row(form.message, {"attr": {"class": "text-dark"}, "label": "Message"}) }}</div>
        <div>{{ form_row(form.envoyer, {"attr": {"class": "text-dark bg-warning btn btn-block"}}) }}</div>
          
{{ form_end(form) }}

</div>
{% include 'composants/footer.html.twig' %}
{% endblock %}
